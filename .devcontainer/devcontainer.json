// https://github.com/devcontainers/templates/tree/main/src/go
{
  "name": "Go",
  // https://github.com/devcontainers/images/blob/main/src/go/.devcontainer/devcontainer.json
  "image": "mcr.microsoft.com/devcontainers/go:dev-1.24-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2.12.2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "streetsidesoftware.code-spell-checker",
        "EditorConfig.EditorConfig",
        "DavidAnson.vscode-markdownlint"
      ]
    }
  },
  "runArgs": [
    "--userns=keep-id"
  ],
  "containerEnv": {
    "HOME": "/home/vscode"
  }
}