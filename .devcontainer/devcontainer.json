{
  "name": "Labtime Dev Container",
  "image": "mcr.microsoft.com/devcontainers/base:2.0.1-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.25.1",
      "golangciLintVersion": "2.4.0"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2.12.4": {},
    "ghcr.io/devcontainers-extra/features/yamllint:2": {},
    "ghcr.io/devcontainers-extra/features/markdownlint-cli2:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "streetsidesoftware.code-spell-checker",
        "EditorConfig.EditorConfig",
        "DavidAnson.vscode-markdownlint",
        "redhat.vscode-yaml",
        "MermaidChart.vscode-mermaid-chart"
      ]
    }
  },
  "runArgs": [
    "--userns=keep-id"
  ],
  "containerEnv": {
    "HOME": "/home/vscode"
  }
}
