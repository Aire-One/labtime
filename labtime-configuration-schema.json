{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aireone.xyz/labtime/internal/yamlconfig/yaml-config",
  "$ref": "#/$defs/YamlConfig",
  "$defs": {
    "DockerMonitorDTO": {
      "properties": {
        "name": {
          "type": "string"
        },
        "container_name": {
          "type": "string"
        },
        "interval": {
          "type": "integer"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "container_name"
      ]
    },
    "HTTPMonitorDTO": {
      "properties": {
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "method": {
          "type": "string"
        },
        "interval": {
          "type": "integer"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "url"
      ]
    },
    "TLSMonitorDTO": {
      "properties": {
        "name": {
          "type": "string"
        },
        "domain": {
          "type": "string"
        },
        "interval": {
          "type": "integer"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "domain"
      ]
    },
    "YamlConfig": {
      "properties": {
        "http_status_code": {
          "items": {
            "$ref": "#/$defs/HTTPMonitorDTO"
          },
          "type": "array"
        },
        "tls_monitors": {
          "items": {
            "$ref": "#/$defs/TLSMonitorDTO"
          },
          "type": "array"
        },
        "docker_monitors": {
          "items": {
            "$ref": "#/$defs/DockerMonitorDTO"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "http_status_code",
        "tls_monitors",
        "docker_monitors"
      ]
    }
  }
}