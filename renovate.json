{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchPackageNames": [
        "go",
        "golang"
      ],
      "rangeStrategy": "bump",
      "groupName": "golang"
    },
    {
      "matchPackageNames": [
        "golangci-lint"
      ],
      "rangeStrategy": "bump",
      "groupName": "golangci-lint"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        ".devcontainer\\/devcontainer\\.json$"
      ],
      "matchStrings": [
        "\"golangciLintVersion\": \"(?<currentValue>.*?)\""
      ],
      "depNameTemplate": "github.com/golangci/golangci-lint",
      "datasourceTemplate": "go"
    }
  ]
}
