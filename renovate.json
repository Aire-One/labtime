{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchPackageNames": [
        "go",
        "golang",
        "mcr.microsoft.com/devcontainers/go"
      ],
      "rangeStrategy": "bump",
      "groupName": "golang"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^.devcontainers/devcontainers.json$"
      ],
      "matchStrings": [
        "^\"golangciLintVersion\": \"(?<currentValue>.*?)\""
      ],
      "depNameTemplate": "github.com/golangci/golangci-lint",
      "datasourceTemplate": "go"
    }
  ]
}
