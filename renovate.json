{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchPackageNames": [
        "go",
        "golang"
      ],
      "rangeStrategy": "bump",
      "groupName": "golang"
    },
    {
      "matchPackageNames": [
        "golangci-lint",
        "golangci/golangci-lint",
        "github.com/golangci/golangci-lint"
      ],
      "rangeStrategy": "bump",
      "groupName": "golangci-lint"
    },
    {
      "matchPackageNames": [
        "ghcr.io/streetsidesoftware/cspell"
      ],
      "rangeStrategy": "bump",
      "groupName": "cspell"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        ".devcontainer\\/devcontainer\\.json$"
      ],
      "matchStrings": [
        "\"golangciLintVersion\": \"(?<currentValue>.*?)\""
      ],
      "depNameTemplate": "github.com/golangci/golangci-lint",
      "datasourceTemplate": "go"
    },
    {
      "fileMatch": [
        "Makefile"
      ],
      "matchStrings": [
        "\\sdocker run -it --rm -v ./:/workdir (?<depName>.*?):(?<currentValue>.*?) lint /workdir"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
