{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "go",
        "golang"
      ],
      "rangeStrategy": "bump",
      "groupName": "golang"
    },
    {
      "matchPackageNames": [
        "golangci-lint",
        "golangci/golangci-lint",
        "github.com/golangci/golangci-lint"
      ],
      "rangeStrategy": "bump",
      "groupName": "golangci-lint"
    },
    {
      "matchPackageNames": [
        "/^renovate/"
      ],
      "automerge": true,
      "separateMultipleMinor": false,
      "separateMultipleMajor": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/.devcontainer\\/devcontainer\\.json$/"
      ],
      "matchStrings": [
        "\"golangciLintVersion\": \"(?<currentValue>.*?)\""
      ],
      "depNameTemplate": "github.com/golangci/golangci-lint",
      "datasourceTemplate": "go"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/Makefile/"
      ],
      "matchStrings": [
        "\\sdocker run -it --rm -v ./:/workdir (?<depName>.*?):(?<currentValue>.*?) lint /workdir"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
